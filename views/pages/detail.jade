extends ../layout

block content
	.container
		.row
			.col-md-7
				img(src="#{book.poster}",alt="#{book.title}",height="200px",width="200px")
			.col-md-5
				dl.dl-horizontal
					dt 书籍名称
					dd= book.title
					dt 书籍作者
					dd= book.author
					dt 国家
					dd= book.country
					dt 语言
					dd= book.language
					dt 发布时间
					dd= book.year
					dt 简介
					dd= book.summary
