extends ../layout

block content
	.container
		.row
			each item in books
				.col-md-2
					.thumbnail
						a(href="/admin/book/#{item._id}")
							img(src="#{item.poster}",alt="#{item.title}" height="200px",width="100%", display="block")
						.caption
							h3 #{item.title}
							p: a.btn.btn-primary(href="/admin/book/#{item._id}",role="button") 查看书籍信息